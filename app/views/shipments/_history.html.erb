<div class="kt-timeline__item kt-timeline__item--<%= icon_color(history) %>">
  <div class="kt-timeline__item-section">
    <div class="kt-timeline__item-section-border" rel="tooltip" title="<%= tooltip_title(history) %>">
      <div class="kt-timeline__item-section-icon">
        <i class="<%= history_icon(history)%> kt-font-<%= icon_color(history) %>"></i>
      </div>
    </div>
    <span class="kt-timeline__item-datetime mr-3">
      <%= l(history.date, format: :week_day_with_time) if history.date %>
    </span>
  </div>
  <span class="kt-timeline__item-text">
    <%= history.description.humanize %>
  </span>
  <div class="kt-timeline__item-info"><i class="la la-user"></i>
    Atualizado por
    <% if history.user %>
    <%= history.user.try(:full_name) %>
    <% else %>
    <%= history.changed_by %>
    <% end %>
  </div>
</div>

<script>
$(function () {
  $("[rel=tooltip]").tooltip({html:true});
})
</script>
