<div class="kt-portlet kt-portlet--height-fluid">
  <div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
      <h3 class="kt-portlet__head-title">Atrasados ou com problemas</h3>
    </div>
  </div>
  <div class="kt-portlet__body">
    <div class="kt-section">
      <div class="kt-section__content">
        <% if @delayed_or_problematic_shipments.count > 0 %>
        <table class="table table-head-noborder">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Transportadora</th>
              <th>Cidade</th>
              <th>Status</th>
              <th>Etapas</th>
            </tr>
          </thead>
          <tbody>
            <% @delayed_or_problematic_shipments.each do |shipment| %>
            <tr>
              <td><%= link_to shipment.full_name, shipment %></td>
              <td><%= shipment.carrier.name %></td>
              <td><%= shipment.city %> / <%= shipment.state %></td>
              <td><%= status_label(shipment.status) %></td>
              <td>
                <%= step_label(shipment, "handling") %>
                <%= step_label(shipment, "carrier_delivery") %>
                <%= step_label(shipment, "client_delivery") %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
        NÃ£o existem envios atrasados ou com problemas
        <% end %>
      </div>
    </div>
  </div>
</div>
