<!-- begin:: Aside -->
<button class="kt-aside-close " id="kt_aside_close_btn"><i class="la la-close"></i></button>
<div class="kt-aside  kt-aside--fixed  kt-grid__item kt-grid kt-grid--desktop kt-grid--hor-desktop" id="kt_aside">

  <!-- begin::Aside Brand -->
  <div class="kt-aside__brand kt-grid__item " id="kt_aside_brand">
    <div class="kt-aside__brand-logo">
      <a href="/">
        <img id="logo" alt="Logo" src="/initial-logo.png" style="width:100%"/>
      </a>
    </div>
    <div class="kt-aside__brand-tools">
      <button class="kt-aside__brand-aside-toggler kt-aside__brand-aside-toggler--left" id="kt_aside_toggler"><span></span></button>
    </div>
  </div>

  <!-- end:: Aside Brand -->

  <!-- begin:: Aside Menu -->
  <div class="kt-aside-menu-wrapper kt-grid__item kt-grid__item--fluid" id="kt_aside_menu_wrapper">
    <div id="kt_aside_menu" class="kt-aside-menu " data-ktmenu-vertical="1" data-ktmenu-scroll="1" data-ktmenu-dropdown-timeout="500">
      <ul class="kt-menu__nav">
        <li class="kt-menu__item <%= 'kt-menu__item--active' if current_page?(controller: 'shipments') %>">
          <%= link_to shipments_path, class: "kt-menu__link" do %>
          <i class="kt-menu__link-icon flaticon2-gift-1"></i>
          <span class="kt-menu__link-text">Envios</span>
          <% end %>
        </li>

        <li class="kt-menu__item <%= 'kt-menu__item--active' if current_page?(controller: 'carriers') %> kt-menu__item--submenu" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
          <a href="javascript:;" class="kt-menu__link kt-menu__toggle">
            <i class="kt-menu__link-icon flaticon-paper-plane">
            </i>
            <span class="kt-menu__link-text">Transportadoras</span>
            <i class="kt-menu__ver-arrow la la-angle-right">
            </i>
          </a>
          <div class="kt-menu__submenu " kt-hidden-height="160" style="display: none; overflow: hidden;">
            <span class="kt-menu__arrow">
            </span>
            <ul class="kt-menu__subnav">
              <li class="kt-menu__item  kt-menu__item--parent" aria-haspopup="true">
                <span class="kt-menu__link">
                  <span class="kt-menu__link-text">Transportadoras</span>
                </span>
              </li>

              <% Rails.configuration.carriers.each do |carrier| %>
              <li class="kt-menu__item  kt-menu__item--submenu" aria-haspopup="true">
                <%= link_to edit_carrier_path(carrier.name), class: "kt-menu__link" do %>
                <i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i>
                <span class="kt-menu__link-text"><%= carrier.name %>
                </span>
                <% end %>
              </li>
              <% end %>

            </ul>
          </div>
        </li>

      </ul>
    </div>
  </div>

  <!-- end:: Aside Menu -->

  <!-- begin:: Aside Footer -->
  <div class="kt-aside__footer kt-grid__item" id="kt_aside_footer">
    <div class="kt-aside__footer-nav">
      <div class="kt-aside__footer-item">
        <%= link_to settings_path, class: "btn btn-icon" do %>
        <i class="flaticon2-gear"></i>
        <% end %>
      </div>
    </div>
  </div>

  <!-- end:: Aside Footer-->
</div>
<!-- end:: Aside -->
